<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.openlab.strooperapp.StrooperActivity"
    android:padding="0dp"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:src="@drawable/home"
                android:layout_weight="30"
                android:onClick="home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STROOPER"
                android:id="@+id/txtNombreApp"
                android:gravity="center_horizontal"
                android:background="#FFFFFF"
                android:layout_weight="30"
                android:textColor="#03A9F4"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="10dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/cancel"
                android:layout_weight="30" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:background="#76FF03">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNick"
                android:layout_weight="2"
                android:textSize="20dp"
                android:text="Usuario"
                android:background="#76FF03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPuntaje"
                android:layout_weight="2"
                android:textSize="20dp"
                android:text="Intentos"
                android:background="#76FF03" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="COMPARTIR"
            android:id="@+id/textView13"
            android:gravity="center_horizontal"
            android:background="#FF9800"
            android:layout_weight="5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FDD835"
            android:layout_gravity="top"
            android:layout_weight="8">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imgTwi"
                android:src="@drawable/twi"
                android:layout_weight="30"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imgFb"
                android:src="@drawable/fb"
                android:layout_weight="30"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imgCompartir"
                android:src="@drawable/share"
                android:layout_weight="30"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#303F9F"
            android:id="@+id/lnrFondo"
            android:layout_weight="6">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#9FA8DA"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/txtSegundos"
                    android:textSize="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFEB3B"
                    android:onClick="jugarAhora" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Segundos"
                    android:id="@+id/textView15"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="VERDE"
                android:id="@+id/txtColor"
                android:layout_gravity="center_horizontal"
                android:textSize="80dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BBDEFB"
            android:layout_weight="0.4">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/btnTrue"
                android:src="@drawable/check"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:onClick="BotonTrue" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/btnFlase"
                android:src="@drawable/wrong"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:onClick="BotonFalse" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
